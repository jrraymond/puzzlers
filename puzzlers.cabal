test-suite tests
  default-language:  Haskell2010
  Type:              exitcode-stdio-1.0
  HS-Source-Dirs:    tests
  Main-Is:           Main.hs
  GHC-Options:       -Wall -tsopts
  build-depends:     base >=4.7 && <4.8
                   , puzzlers

library
  exposed-modules:   SudokuSolver
                   , SudokuGenerator
                   , KenKenSolver
                   , KenKenGenerator
